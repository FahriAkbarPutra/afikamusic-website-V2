<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title|default('Afika Audio Production') }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ base_path }}/assets/css/vendor/leaflet.css">
    <link rel="stylesheet" href="{{ base_path }}/assets/css/style.css">
    <meta name="theme-color" content="#121212">
</head>
<body data-base-path="{{ base_path }}">
    <div id="wave-container">
        <svg id="waves" width="100%" height="100%" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <path id="wave1" d="" stroke="#00BFFF" fill="none" stroke-width="1.5"></path>
            <path id="wave2" d="" stroke="#DFFF00" fill="none" stroke-width="1.5"></path>
            <path id="wave3" d="" stroke="#00BFFF" fill="none" stroke-width="1.5"></path>
        </svg>
    </div>

    <header>
        <div class="container" id="nav-container">
            <a href="{{ base_path }}/home" class="logo">
                <img src="{{ base_path }}/assets/images/logo.png" alt="Afika Music Logo" style="height: 50px;">
            </a>
            <div class="nav-center">
                <nav>
                    <a href="{{ base_path }}/home">Beranda</a>
                    <a href="{{ base_path }}/layanan">Layanan</a>
                    <a href="{{ base_path }}/galeri">Galeri</a>
                    <a href="{{ base_path }}/jadwal">Jadwal</a>
                </nav>
            </div>
            <div class="nav-right">
                <a href="{{ base_path }}/booking" class="btn-cta">Booking</a>
            </div>
            <button id="mobile-menu-button" class="mobile-menu-button" aria-label="Buka menu">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </button>
        </div>
    </header>
    <div id="mobile-drawer">
        <button id="mobile-drawer-close" class="mobile-drawer__close" aria-label="Tutup menu">Ã—</button>
        <div class="mobile-drawer__logo">
            <a href="{{ base_path }}/home">
                <img src="{{ base_path }}/assets/images/logo.png" alt="Afika Music Logo">
            </a>
        </div>
        <nav class="mobile-drawer__links">
            <a href="{{ base_path }}/home">Beranda</a>
            <a href="{{ base_path }}/layanan">Layanan</a>
            <a href="{{ base_path }}/galeri">Galeri</a>
            <a href="{{ base_path }}/jadwal">Jadwal</a>
        </nav>
        <div class="mobile-drawer__cta">
            <a href="{{ base_path }}/booking" class="btn-cta">Booking Sekarang</a>
            <a href="{{ base_path }}/layanan" class="btn-secondary">Lihat Layanan</a>
        </div>
    </div>
    <div id="nav-overlay" aria-hidden="true"></div>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <div class="container">
            <p>&copy; {{ "now"|date("Y") }} Afika Audio Production.</p>
        </div>
    </footer>
    <script src="{{ base_path }}/assets/js/vendor/leaflet.js"></script>
    <script src="{{ base_path }}/assets/js/main.js"></script>
</body>
</html>