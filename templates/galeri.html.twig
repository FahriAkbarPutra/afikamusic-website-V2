{% extends "layout.html.twig" %}

{% block content %}
<section class="gallery-hero fade-in-section">
    <div class="gallery-hero__content container">
        <h1>Galeri Media</h1>
        <p>Dokumentasi dari berbagai acara yang telah kami dukung.</p>
    </div>
</section>

<section class="gallery-section">
    <div class="gallery-container container">
        <div class="gallery-grid">
            {% for file in files %}
                <div class="gallery-item">
                    <iframe src="https://drive.google.com/file/d/{{ file.file_id }}/preview"></iframe>
                    <p>{{ file.file_name }}</p>
                </div>
            {% else %}
                <div class="gallery-empty">
                    <span>ðŸ“·</span>
                    <h3>Belum ada media di galeri</h3>
                    <p>Galeri akan segera diisi dengan dokumentasi acara terbaru.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .gallery-hero {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 80vh;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    .gallery-hero::before {
        content: "";
        position: absolute;
        inset: -10% -10% auto -10%;
        height: 70%;
        background: radial-gradient(1000px 500px at 50% 0%, rgba(0,191,255,.18), rgba(223,255,0,.08) 40%, rgba(0,0,0,0) 70%);
        filter: blur(10px);
        pointer-events: none;
    }
    .gallery-hero__content {
        position: relative;
        z-index: 2;
        padding: 20px;
    }
    .gallery-hero__content h1 {
        font-size: clamp(2rem, 4vw + 1rem, 3.5rem);
        font-weight: 700;
        margin-bottom: 10px;
        line-height: 1.1;
        background: linear-gradient(135deg, #38bdf8, #fbbf24);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: none;
    }
    .gallery-hero__content p {
        font-size: clamp(1rem, .6vw + .6rem, 1.2rem);
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        color: var(--text-secondary);
    }

    .gallery-section {
        padding: 80px 0;
        background: transparent;
        position: relative;
        overflow: hidden;
    }
    .gallery-section::before {
        content: "";
        position: absolute;
        left: -20%;
        right: -20%;
        top: -60%;
        bottom: -110%;
        background: radial-gradient(1000px 380px at 50% 110%, rgba(0,191,255,.18) 0%, rgba(223,255,0,.12) 40%, rgba(0,0,0,0) 78%);
        filter: blur(16px);
        pointer-events: none;
        z-index: -1;
    }
    .gallery-container {
        display: grid;
        gap: 32px;
    }
    .gallery-grid { 
        display: grid; 
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); 
        gap: 30px; 
    }
    .gallery-item { 
        backdrop-filter: blur(14px);
        background: linear-gradient(135deg, rgba(56,189,248,0.12), rgba(251,191,36,0.08));
        border: 1px solid rgba(56,189,248,0.15);
        border-radius: 16px; 
        overflow: hidden; 
        text-align: center;
        box-shadow: 0 4px 16px rgba(0,0,0,0.2);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .gallery-item:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    }
    .gallery-item iframe { 
        width: 100%; 
        height: 200px; 
        border: none; 
    }
    .gallery-item p { 
        padding: 16px; 
        margin: 0; 
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .gallery-empty {
        grid-column: 1 / -1;
        text-align: center;
        background: var(--bg-card);
        border: 1px dashed var(--border-color);
        border-radius: 12px;
        padding: clamp(40px, 8vw, 64px);
        color: var(--text-primary);
        display: grid;
        gap: 18px;
        justify-items: center;
    }
    .gallery-empty span {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
    }
    .gallery-empty h3 {
        margin: 0;
        font-size: clamp(1.2rem, 4vw, 1.5rem);
        background: linear-gradient(135deg, #38bdf8, #fbbf24);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .gallery-empty p {
        margin: 0;
        color: var(--text-secondary);
        font-size: clamp(0.9rem, 3vw, 1rem);
    }

    @media (max-width: 768px) {
        .gallery-hero {
            padding: clamp(40px, 8vh, 80px) 0 clamp(20px, 4vh, 40px);
        }
        .gallery-hero__content h1 {
            font-size: clamp(1.8rem, 5vw, 2.2rem);
        }
        .gallery-hero__content p {
            font-size: clamp(0.85rem, 2.5vw, 0.95rem);
            padding: 0 1rem;
        }
        .gallery-section {
            padding: clamp(20px, 4vw, 40px) 0;
        }
        .gallery-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: clamp(12px, 2vw, 16px);
        }
        .gallery-item {
            margin: 0 0.25rem;
        }
    }

    @media (max-width: 480px) {
        .gallery-hero__content {
            padding: 0 1rem;
        }
        .gallery-grid {
            grid-template-columns: 1fr;
            margin: 0 0.5rem;
        }
        .gallery-item {
            margin: 0;
        }
    }
</style>
{% endblock %}