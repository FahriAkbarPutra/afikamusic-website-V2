{% extends "admin/layout.html.twig" %}

{% block content %}
    <div class="top-toolbar">
        <div>
            <a href="{{ base_path }}/admin/services/new" class="btn btn-primary">Tambah Layanan Baru</a>
        </div>
        <div class="toolbar-info">
            {{ services|length }} layanan aktif di database
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Nama Layanan</th>
                <th>Harga</th>
                <th>Status</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
            <tr>
                <td>
                    <strong style="color: var(--admin-text);">{{ service.name }}</strong>
                    {% if service.description %}
                        <div style="margin-top:6px; color: var(--admin-text-muted); font-size:0.85rem;">{{ service.description|slice(0, 120) }}{% if service.description|length > 120 %}...{% endif %}</div>
                    {% endif %}
                </td>
                <td style="color: var(--admin-text); font-weight:600;">Rp {{ service.price|number_format(0, ',', '.') }}</td>
                <td>
                    <span class="status-badge {{ service.is_active ? 'status-active' : 'status-inactive' }}">
                        {{ service.is_active ? 'Aktif' : 'Non-Aktif' }}
                    </span>
                </td>
                <td>
                    <div class="table-actions">
                        <a href="{{ base_path }}/admin/services/edit/{{ service.id }}" class="btn btn-warning">Edit</a>
                        <form action="{{ base_path }}/admin/services/delete/{{ service.id }}" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus layanan ini?');">
                            <button type="submit" class="btn btn-danger">Hapus</button>
                        </form>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" style="text-align:center; color: var(--admin-text-muted);">Belum ada layanan.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}